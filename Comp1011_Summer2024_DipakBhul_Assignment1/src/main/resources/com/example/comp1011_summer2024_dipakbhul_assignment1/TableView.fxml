<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="499.0" prefWidth="608.0" stylesheets="@app.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.comp1011_summer2024_dipakbhul_assignment1.controllers.TableViewController">
    <TableView fx:id="flightTable" prefHeight="430.0" prefWidth="644.0">
        <columns>
            <TableColumn fx:id="flightNumberCol" text="Flight Number" />
            <TableColumn fx:id="airlineCol" text="Airline" />
            <TableColumn fx:id="sourceColumn" text="Origin" />
            <TableColumn fx:id="destinationCol" text="Destination" />
            <TableColumn fx:id="departureTimeCol" text="Departure Time" />
            <TableColumn fx:id="arrivalTimeCol" text="Arrival Time" />
            <TableColumn fx:id="flightStatusCol" text="Status" />
            <TableColumn fx:id="delayColumn" text="Delay (minutes)" />
        </columns>
    </TableView>
    <Button fx:id="chartBtn" layoutX="525.0" layoutY="455.0" mnemonicParsing="false" onAction="#showChartView" prefHeight="30.0" prefWidth="97.0" text="Show Chart">
        <font>
            <Font name="Tahoma" size="14.0" />
        </font>
    </Button>
    <Button fx:id="loadAllBtn" layoutX="267.0" layoutY="455.0" mnemonicParsing="false" onAction="#loadAllFlights" prefHeight="30.0" prefWidth="171.0" text="Load all Flight Details">
        <font>
            <Font name="Tahoma" size="14.0" />
        </font>
    </Button>
</AnchorPane>
